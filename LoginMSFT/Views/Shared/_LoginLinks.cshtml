@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager
@using System.Security.Claims

<ul class="navbar-nav">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hi, @User.Identity!.Name @User.FindFirst(ClaimTypes.NameIdentifier)!.Value</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="logout" asp-controller="UserLogin">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="UserLogin" asp-action="Login">
                Login/Registro
            </a>
        </li>
    }
</ul>